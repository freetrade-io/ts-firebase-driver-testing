{
  "name": "ts-firebase-driver-testing",
  "version": "0.23.19",
  "description": "Swap out Firebase as a driver for in-process testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc"
  },
  "prepublish": "tsc",
  "repository": "https://github.com/freetrade-io/ts-firebase-driver-testing",
  "author": "Hugh Grigg",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "lodash": ">=4",
    "object-path": "^0",
    "object.entries": "^1",
    "object.values": "^1"
  },
  "devDependencies": {
    "@types/jest": "^24",
    "@types/lodash": "^4",
    "@types/node": "^13.1.4",
    "@types/object-path": "^0",
    "jest": ">=24",
    "prettier": ">=1",
    "ts-jest": ">=24",
    "tslint": ">=5",
    "tslint-config-prettier": ">=1",
    "tslint-plugin-prettier": ">=2",
    "typescript": ">=3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!tests/**",
      "!**/*test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testEnvironment": "node"
  }
}
