{
  "name": "ts-firebase-driver-testing",
  "version": "0.6.0",
  "description": "Swap out Firebase as a driver for in-process testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsc"
  },
  "repository": "https://github.com/freetrade-io/ts-firebase-driver-testing",
  "author": "Hugh Grigg",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@google-cloud/pubsub": "*",
    "firebase-admin": "*",
    "firebase-functions": "*",
    "lodash": "^4.17.15",
    "object-path": "^0.11.4",
    "object.entries": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.5",
    "@types/object-path": "^0.11.0",
    "jest": "^24.9.0",
    "object.values": "^1.1.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!tests/**",
      "!**/*test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testEnvironment": "node"
  }
}
